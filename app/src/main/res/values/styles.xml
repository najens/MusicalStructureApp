<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for linear layout-->
    <style name="linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorWhiteBackground</item>
    </style>

    <!-- Style for relative layout-->
    <style name="relative_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for library categories -->
    <style name="category_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_height_dimen</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@color/colorWhiteBackground</item>
        <item name="android:textColor">@color/colorCategoriesText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style for music player images -->
    <style name="player_images_style">
        <item name="android:layout_width">@dimen/list_height_dimen</item>
        <item name="android:layout_height">@dimen/list_height_dimen</item>
    </style>

    <!-- Style for music player text -->
    <style name="player_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/list_height_dimen</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhiteBackground</item>
    </style>

    <!-- Style for cover image on artist page -->
    <style name="cover_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cover_height_dimen</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Style for categories on artist page -->
    <style name="artist_category_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/colorWhiteBackground</item>
    </style>

    <!-- Style for images on artist page -->
    <style name="album_image_style">
        <item name="android:layout_width">@dimen/list_height_dimen</item>
        <item name="android:layout_height">@dimen/list_height_dimen</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Style for songs on artist page -->
    <style name="song_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">#009688</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/colorWhiteBackground</item>
    </style>

    <!-- Style for artists on artist page -->
    <style name="artists_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#009688</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Style for now playing cover image-->
    <style name="now_playing_cover_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Style for now playing seekbar -->
    <style name="seekbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorWhiteBackground</item>
    </style>

    <!-- Style for now playing time -->
    <style name="now_playing_time_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Style for now playing song title-->
    <style name="now_playing_song_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!-- Style for hamburger image -->
    <style name="hamburger_style">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Style for now playing artist title -->
    <style name="now_playing_artist_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">35dp</item>
    </style>

    <!-- Style for previous song image -->
    <style name="previous_song_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <!-- Style for play image -->
    <style name="play_song_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Style for next song image -->
    <style name="next_song_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <!-- Style for item divider lines -->
    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Style for popup window -->
    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- Style for purchase textviews -->
    <style name="purchase_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <!-- Style for buy button -->
    <style name="buy_button_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Style for Activity Explanations -->
    <style name="activty_explanations_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorExplanationText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for Activity Headings -->
    <style name="activty_headings_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@color/colorExplanationText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!-- Style for Menu Bar Buttons -->
    <style name="menu_buttons_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhiteBackground</item>
        <item name="android:textSize">9sp</item>
    </style>

</resources>
